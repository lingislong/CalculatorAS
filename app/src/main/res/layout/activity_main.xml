<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#035F6A"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewResult"
            android:layout_width="288dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#575656"
            android:gravity="bottom"
            android:paddingLeft="15dp"
            android:text="0"
            android:textColor="#D3D3D3"
            android:textColorHint="#000000"
            android:textColorLink="#000000"
            android:textSize="36sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonSeven"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:onClick="funcNumber"
            android:paddingTop="30dp"
            android:text="7"
            android:textSize="30sp"
            app:backgroundTint="#4C3F3F" />

        <Button
            android:id="@+id/buttonEight"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:onClick="funcNumber"
            android:paddingTop="30dp"
            android:text="8"
            android:textSize="30sp"
            app:backgroundTint="#4C3F3F" />

        <Button
            android:id="@+id/buttonNine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:onClick="funcNumber"
            android:paddingTop="30dp"
            android:text="9"
            android:textSize="30sp"
            app:backgroundTint="#4C3F3F" />

        <Button
            android:id="@+id/buttonDivision"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:onClick="funcOP"
            android:paddingTop="30dp"
            android:text="÷"
            android:textSize="36sp"
            app:backgroundTint="#117AD8" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonFour"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:onClick="funcNumber"
            android:paddingTop="30dp"
            android:text="4"
            android:textSize="30sp"
            app:backgroundTint="#4C3F3F" />

        <Button
            android:id="@+id/buttonFive"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:onClick="funcNumber"
            android:paddingTop="30dp"
            android:text="5"
            android:textSize="30sp"
            app:backgroundTint="#4C3F3F" />

        <Button
            android:id="@+id/buttonSix"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:onClick="funcNumber"
            android:paddingTop="30dp"
            android:text="6"
            android:textSize="30sp"
            app:backgroundTint="#4C3F3F" />

        <Button
            android:id="@+id/buttonMultiplication"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttonstyle"
            android:onClick="funcOP"
            android:paddingTop="30dp"
            android:text="×"
            android:textSize="36sp"
            app:backgroundTint="#117AD8" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonOne"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:onClick="funcNumber"
            android:paddingTop="30dp"
            android:text="1"
            android:textSize="30sp"
            app:backgroundTint="#4C3F3F" />

        <Button
            android:id="@+id/buttonTwo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:onClick="funcNumber"
            android:paddingTop="30dp"
            android:text="2"
            android:textSize="30sp"
            app:backgroundTint="#4C3F3F" />

        <Button
            android:id="@+id/buttonThree"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:onClick="funcNumber"
            android:paddingTop="30dp"
            android:text="3"
            android:textSize="30sp"
            app:backgroundTint="#4C3F3F" />

        <Button
            android:id="@+id/buttonSubtraction"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttonstyle"
            android:onClick="funcOP"
            android:paddingTop="30dp"
            android:text="−"
            android:textSize="36sp"
            app:backgroundTint="#117AD8" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonClear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:onClick="funcClearAll"
            android:paddingTop="30dp"
            android:text="N=NP"
            android:textIsSelectable="false"
            android:textSize="18sp"
            app:backgroundTint="#B80808" />

        <Button
            android:id="@+id/buttonZero"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:onClick="funcNumber"
            android:paddingTop="30dp"
            android:text="0"
            android:textSize="30sp"
            app:backgroundTint="#4C3F3F" />

        <Button
            android:id="@+id/buttonEqual"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:onClick="funcEq"
            android:paddingTop="30dp"
            android:text="="
            android:textSize="36sp"
            app:backgroundTint="#FF5722" />

        <Button
            android:id="@+id/buttonAddition"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttonstyle"
            android:onClick="funcOP"
            android:paddingTop="30dp"
            android:text="+"
            android:textSize="36sp"
            app:backgroundTint="#117AD8" />
    </LinearLayout>

</LinearLayout>